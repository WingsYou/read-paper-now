    "arxiv-paper-info": {
      "name": "Fetch Paper Info (Fast)",
      "command": "/path/to/read_paper_now/typora-plugin/fetch_and_replace.sh",
      "args": ["${selection}"],
      "replaceSelection": true,
      "when": "hasSelection"
